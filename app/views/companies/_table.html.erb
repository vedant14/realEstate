<div class="row center">
  <%= paginate @companies %>
</div>
<div class="table-responsive">
    <table class="table table-responsive-sm table-hover">
        <thead>
          <tr>
            <th class="w-5">ID</th>
            <th class="w-15">Created Date</th>
            <th class="w-35">Company Name</th>
            <th class="w-30">Sub Domain</th>
            <th class="w-15">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td> <%= company.id %>  </td>
                <td> <%=company.created_at.strftime("%d/%m/%Y")  %> </td>
                <td> <%= company.name %> </td>  
                <td> <%= company.subdomain %> </td>
                <td>
                  <div class="btn-group company-but">
                    <%= link_to 'Edit', edit_company_path(company), class: "btn btn-light" if policy(company).edit? %> 
                  </div>
                </td>
              </tr>
            <% end %>
        </tbody>
    </table>
<div class="row center">
  <%= paginate @companies %>
</div>