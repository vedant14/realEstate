<div class="container-fluid">
	<div class="section-break">  		
	    <div class="container">
	        <div class="w-md-80 w-lg-50 text-center mx-md-auto mb-9">
	        	<h2 class="font-weight-medium">Sort through the featured property</h2>
       		</div>
	        <div class="row">
	          	<% @properties.each do |property| %>
	            <div class="card border-0 shadow-sm col-md-5 mr-3">
			        <div class="position-relative py-1">
				     	<% if property.images.attached? %> 
				          	<%= link_to image_tag(property.images.first, width: '100%') , property, class: "card-img-top w-100"  %>
	    			    <% else %>
				        <%= link_to image_tag("img/item/1.jpg", width: '100%'),property, class: "card-img-top w-100" %> 
				        <% end %> 
				    </div>
					<div class="card-body p-5">
						<h4 class="h6">
							<% if user_or_admin property %> Unit <%= property.unit_no %> - <% end %> <%= property.bedroom %> Bedroom <%= property.property_type %> in  <%= property.society_name %>,  <%= property.city %>
						</h4>
						<%= badge_helper (property.service) %> <%= number_to_currency(property.price,  unit: "â‚¹", precision: 0) %>
						<div class="btn-group mr-2">
							<%= link_to 'Edit', edit_property_path(property) ,  class: "btn btn-sm btn-outline-secondary" if policy(property).edit? %>
							<%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' } ,  class: "btn btn-sm btn-outline-secondary" if policy(property).destroy? %>
						</div>	
		            </div>
	            </div>
	            <% end %>
            </div>
	      </div>
	    </div>
        <div class="text-center mt-9 py-3">
          <%= link_to "View All Houses", properties_path, class: "btn btn-sm btn-soft-primary btn-wide transition-3d-hover" %>
        </div>
	</div>
</div>		 

	 