<div class="table-responsive">
    <table class="table table-responsive-sm table-hover">
        <thead>
          <tr>
            <th class="w-5">ID</th>
            <th class="w-15">Offer Date</th>
            <th class="w-35">Client Name</th>
            <th class="w-35">Property</th>
            <th class="w-10">Actions</th>
          </tr>
        </thead>
        <tbody>
            <% @offers.each do |offer| %>
              <tr>
                <td> <%= offer.id %> </td>
                <td> <%=offer.created_at.strftime("%d/%m/%Y")  %> <br> <%= offer_badge offer %></td>
                <td> <%= offer.full_name %> |
                    <em> <%= offer.phone %> </em>
                    <br> <em> <%= offer.email %> </em>
                </td>  
                <td>  <%= offer.property.bedroom %> Bedroom <%= offer.property.property_type %> in <%= offer.property.society_name %>,  <%= offer.property.city %><br> <%=  link_to "View property", property_path(offer.property)  %> </td>
                <td> <%= offer_status offer %> </td>
              </tr>
            <% end %>
        </tbody>
    </table>
<div class="row center">
  <%= paginate @offers %>
</div>