<div class="row justify-content-lg-between mt-7">
<div class="col-lg-8">
  <h1 class="h3 font-weight-medium"><% if user_or_admin(@property) %> Unit <%= @property.unit_no %> - <% end %>  <%= @property.society_name %>, <%= @property.address %>,  <%= @property.pincode %> , <%= @property.city %> </h1> 
</div>
<div class="col-lg-4 align-self-lg-end text-lg-right">
  <span class="h3 text-primary font-weight-medium">
  <%= badge_helper (@property.service) %> <%= number_to_currency(@property.price, unit: "â‚¹", precision: 0) %> 
  </span>
</div>
</div>
<div class="row space-top-2">
<div class="col-lg-8 mb-9 mb-lg-0">
  <div class="tab-content">
      <div class="mb-3">
        <h2 class="h5">Property Details</h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <ul class="list-unstyled font-size-1 mb-0">
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Property Type:</span>
              <span class="text-secondary"> 
                <% if @property.property_type? %>
                  <%= @property.property_type %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Bedrooms:</span>
              <span class="text-secondary"> 
                <% if @property.bedroom? %>
                  <%= @property.bedroom %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Bathrooms:</span>
              <span class="text-secondary"> 
                <% if @property.bathroom? %>
                  <%= @property.bathroom %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>                   
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Balconies:</span>
              <span class="text-secondary"> 
                <% if @property.balcony? %>
                  <%= @property.balcony %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>
           <li class="d-sm-flex justify-content-sm-between py-1">
                <span class="font-weight-medium">Property Furnishing:</span>
                <span class="text-secondary"> 
                  <% if @property.furnishing? %>
                    <%= @property.furnishing %> 
                  <% else %>
                  -
                  <% end %>
                </span>
              </li>
          </ul>
          <!-- End Fact List -->
        </div>

        <div class="col-md-6">
          <ul class="list-unstyled font-size-1 mb-0">
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Carpet Area:</span>
              <span class="text-secondary"> 
                <% if @property.carpet_area? %>
                  <%= @property.carpet_area %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Super built-up area:</span>
              <span class="text-secondary"> 
                <% if @property.super_built_up_area? %>
                  <%= @property.super_built_up_area %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>                   
            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">On Floor:</span>
              <span class="text-secondary"> 
                <% if @property.on_floor? %>
                  <%= @property.on_floor %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>

            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Total Floor:</span>
              <span class="text-secondary"> 
                <% if @property.total_floors? %>
                  <%= @property.total_floors %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>

            <li class="d-sm-flex justify-content-sm-between py-1">
              <span class="font-weight-medium">Parking:</span>
              <span class="text-secondary"> 
                <% if @property.parking? %>
                  <%= @property.parking %> 
                <% else %>
                -
                <% end %>
              </span>
            </li>
          </ul>
          <!-- End Fact List -->
        </div>
      </div>
      <!-- End Key Facts -->

      <!-- View Info -->
      <div class="border-top border-bottom py-4 my-6">
        <div class="row justify-content-sm-between">
          <div class="col-sm-6 text-sm-right u-ver-divider u-ver-divider--none-sm mb-2 mb-sm-0">
            <div class="pr-md-4">
              <span class="text-secondary">Posted on:</span>
              <strong class="text-dark"> <%= @property.created_at %> </strong>
            </div>
          </div>
          <div class="col-sm-6 ">
            <div class="pl-md-4">
              <span class="text-secondary">Total offers:</span>
              <strong class="text-dark"> <%= @offers.count %> 
              </strong>
            </div>
          </div>
        </div>
      </div>
      <!-- End View Info -->

      <!-- Title -->
      <div class="mb-3">
        <h3 class="h5">Property description</h3>
      </div>
      <!-- End Title -->
      <p>
        <%= @property.description %>
      </p>

      <hr class="my-6">

