<div class="col-md-4">
  <div class="card mb-4 shadow-sm"> 
    <% if property.images.attached? %> 
        <%= link_to image_tag(property.images.first.variant(resize: "350x250!").processed) , property, class: "index-image"  %>
    <% else %>
      <%= link_to image_tag("img/item/1.jpg", size:'350x250'), property, class: "index-image" %> 
    <% end %> 
    <div class="card-header">
      <p class="card-text"> <%= property.bedroom %> BHK in <%= property.society_name %>,  <%= property.city %></p>
    </div>
    <div class="card-body">
      <p class="card-text"> <%= property.furnishing %> and carpet area is <%= number_with_precision(property.carpet_area, precision: 0) %> sq. mt.</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'Edit', edit_property_path(property) ,  class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' } ,  class: "btn btn-sm btn-outline-secondary" %>
        </div>
        <span class="text-muted"> <%= number_to_currency(property.price,  unit: "Rs. ", precision: 0) %></span>
      </div>
    </div>
  </div>
</div>