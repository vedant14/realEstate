<div class="album py-5 bg-light">
  <div class="container-fluid">
    <div class="card">
      <div class="container">
        <div class="card-body">
          <%= render "shared/searchbar" %>
        </div>
      </div>
    </div>
  </div>
  <div class="album-index">  
    <div class="container-fluid">
      <div class="row">
      	<% if @properties.count == 0 %>
      		<h1> No Properties </h1>
      	<% else %>  
      	    <%= render @properties %>
      	<% end %>
      </div>
    </div>
  </div>
</div>
