<div class="img-section">	
	<% if @property.images.attached? %>
	<div class="row">
		<div class="col-md-8">
			<div class="property-img" data-toggle="modal" data-target=".bd-example-modal-lg">
			   <%= image_tag @property.images.first, class: "img-fluid" %>
			</div>
		</div>
		<% if @property.images.second.present? %>
			<div class="col-md-4 d-none d-md-block ">
				<div class="property-img " data-toggle="modal" data-target=".bd-example-modal-lg">
				   <%= image_tag @property.images.second, class: "img-fluid"%>
				</div>
				<div class="property-img property-count" data-toggle="modal" data-target=".bd-example-modal-lg">
					<span> + <%= @property.images.count %> </span>
				</div>
			</div>
		<% end %>
	</div>
			<%= render "image" %>
	<% else %>
			<div class="property-img">
				<%= image_tag "https://images.unsplash.com/photo-1498373419901-52eba931dc4f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80", class: "img-fluid", alt: "Default Image" %> 
			</div>
	<% end %>
</div>

